<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Date (Clickable) -->
    <TextView
        android:id="@+id/date_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/me_date_title"
        android:textSize="18sp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <!-- Time (Clickable) -->
    <TextView
        android:id="@+id/time_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/me_time_title"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <!-- Duration (Clickable) -->
    <TextView
        android:id="@+id/duration_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/me_duration_title"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <!-- Distance (Clickable) -->
    <TextView
        android:id="@+id/distance_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/me_distance_title"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <!-- Calories (Clickable) -->
    <TextView
        android:id="@+id/calories_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/me_calories_title"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <!-- Heart Rate (Clickable) -->
    <TextView
        android:id="@+id/heartrate_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/me_heart_rate_title"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <!-- Comment (Clickable) -->
    <TextView
        android:id="@+id/comment_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/me_comment_title"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <!-- Save and Cancel buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp">

        <Button
            android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/save_button_text"
            android:textColor="@android:color/black"
            android:background="@color/light_gray"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel_button_text"
            android:textColor="@android:color/black"
            android:layout_marginStart="16dp"
            android:background="@color/light_gray"
            tools:ignore="ButtonStyle" />
    </LinearLayout>
</LinearLayout>
