<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ad_exercise_details_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ad_exercise_details_text"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:layout_marginBottom="16dp"/>

        <!-- Display various exercise entry details -->
        <TextView
            android:id="@+id/ad_input_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ad_input_type_text"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/ad_activity_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ad_activity_type_text"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/ad_date_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ad_date_time_text"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/ad_duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ad_duration_text"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/ad_distance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ad_distance_text"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/ad_calories_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ad_calories_text"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/ad_heart_rate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ad_heart_rate_text"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/ad_comment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ad_comment_text"
            android:layout_marginTop="8dp" />

        <!-- Delete Button -->
        <Button
            android:id="@+id/ad_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/ad_delete_button_text" />
    </LinearLayout>
</ScrollView>
